// GREEN PHASE: Minimal Templ for Detailed mode line-by-line view
package templates

templ DetailedModeLineByLine(lines []string) {
  <div class="line-by-line p-4 bg-base-100 rounded shadow">
    <h2 class="text-lg font-bold mb-2">Detailed View</h2>
    <ol class="list-decimal ml-6">
      {for l in lines}
        <li><pre>{l}</pre></li>
      {end}
    </ol>
  </div>
}

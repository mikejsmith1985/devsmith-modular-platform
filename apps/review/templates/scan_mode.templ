// GREEN PHASE: Minimal Templ for Scan mode search interface
package templates

templ ScanModeSearch() {
  <form id="scan-search" class="flex gap-2 mb-4" role="search" aria-label="Scan Mode Search">
    <input class="input input-bordered flex-1" type="text" placeholder="Search..." aria-label="Scan query" required />
    <button class="btn btn-secondary" type="submit" aria-label="Scan">Scan</button>
  </form>
}

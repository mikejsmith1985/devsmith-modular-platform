# DevSmith Platform Environment Variables
# Copy this file to .env and fill in your actual values

# JWT Secret (REQUIRED)
# Generate a secure random string for production
# Example: openssl rand -base64 32
JWT_SECRET=your-secret-key-here-change-me-in-production

# GitHub OAuth (REQUIRED for authentication)
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret
REDIRECT_URI=http://localhost:3000/auth/github/callback

# Database Configuration
POSTGRES_USER=devsmith
POSTGRES_PASSWORD=devsmith_password
POSTGRES_DB=devsmith
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Service Ports (Docker internal)
PORTAL_PORT=8080
REVIEW_PORT=8081
LOGS_PORT=8082
ANALYTICS_PORT=8083

# Gateway
NGINX_PORT=3000

# Logging
LOG_LEVEL=info
LOG_SERVICE_URL=http://logs:8082/api/logs
LOGS_STRICT=false

# AI Configuration (optional)
OLLAMA_HOST=http://host.docker.internal:11434
AI_MODEL=deepseek-coder:6.7b
